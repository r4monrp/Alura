@{
    ViewData["Title"] = "Resumo";
}
@model  CasaDeCodigo.Models.ViewModels.CarrinhoViewModel

<h3>Resumo do Pedido</h3>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
            <h4>Nº do Pedido: 12346789</h4>
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-md-3">
                <h4>Seus Dados</h4>
                <div>João da Silva</div>
                <div>(11)1234-5678</div>
            </div>
            <div class="col-md-3">
                <div>joao@alura.com.br</div>
            </div>
            <div class="col-md-6">
                <h4>Endereço de entrega</h4>
                <div>Rua vergueiro , 123 - SP</div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <h4>Item</h4>
            </div>
            <div class="col-md-2 text-right">
                <h4>Quantidade</h4>
            </div>
        </div>
        @foreach (var item in Model.Itens)
        {
            <div class="row">
                <div class="col-md-10">
                    <div>@item.Produto.Nome</div>
                </div>
                <div class="col-md-2 text-right">
                    <div>@item.Quantidade</div>
                </div>
            </div>
        }
    </div>
</div>